<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>influir</groupId>
    <artifactId>Backup</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>bar</packaging>

    <dependencies>
        <!-- Adicione suas dependências aqui, se houver -->
    </dependencies>

    <repositories>
        <!-- Repositório da IBM para plugins e dependências do App Connect -->
        <repository>
            <id>ibm-integration-toolkit</id>
            <name>IBM Integration Toolkit Repository</name>
            <url>https://public.dhe.ibm.com/ibmdl/export/pub/software/integration/maven</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <!-- Plugin para gerar o arquivo .bar -->
            <plugin>
                <groupId>com.ibm.integration</groupId>
                <artifactId>integration-toolkit-maven-plugin</artifactId>
                <version>12.0.11.0</version>
                <extensions>true</extensions>
            </plugin>
        </plugins>
    </build>
</project>
